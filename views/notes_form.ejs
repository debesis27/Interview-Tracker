<%- include("header") %>

	<form method="post" action="">
		<div class="form-group">
			<label for="noteFormCompany">Select company*</label>
			<select id="noteFormCompany" class="form-control" name="company_id">
				<option value="" selected></option>
				<% for(let i=0; i <company_list.length; i++){ %>
					<option value="<%= company_list[i]._id %>"><%= company_list[i].company_name %></option>
				<% } %>
			</select>
		</div>
		<div class="form-group">
			<label for="noteFormNote">Enter note*</label>
			<input type="text" class="form-control" name="note" id="noteFormNote" value="<%= note %>">
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>

	<% if(errors){ %>
		<div class="error-list">
			<ul>
				<% for(let i=0; i <errors.length; i++){ %>
					<li>
						<%= errors[i].msg %>
					</li>
					<% } %>
			</ul>
		</div>
	<% } %>

<%- include("footer") %>