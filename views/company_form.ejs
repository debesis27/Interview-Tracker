<%- include("header") %>

<form method="post" action="">
  <div class="form-group">
    <label for="companyFormName">Company Name*</label>
    <input type="text" class="form-control" name="company_name" id="companyFormName" placeholder="Enter company name" value="<%= company.company_name %>">
  </div>
  <div class="form-group">
    <label for="companyFormType">Type</label>
    <input type="text" class="form-control" name="type" id="companyFormType" placeholder="Startup, Mid=size, Large,..." value="<%= company.type %>">
  </div>
	<div class="form-group">
    <label for="companyFormRole">Role</label>
    <input type="text" class="form-control" name="role" id="companyFormRole" placeholder="Enter role" value="<%= company.role %>">
  </div>
	<div class="form-group">
    <label for="companyFormStage">Stage</label>
    <input type="text" class="form-control" name="stage" id="companyFormStage" placeholder="Phone Screen, On-site, Offer,..." value="<%= company.stage %>">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

<% if(errors){ %>
	<div class="error-list">
		<ul>
			<% for(let i =0; i <errors.length; i++){ %>
				<li><%= errors[i].msg %></li>
			<% } %>
		</ul>
	</div>
	
<% } %>


<%- include("footer") %>