<%- include("header") %>

	<form method="post" action="">
		<div class="form-group">
			<label for="taskFormCompany">Select company*</label>
			<select id="taskFormCompany" class="form-control" name="company_id">
				<option value="" selected></option>
				<% for(let i=0; i <company_list.length; i++){ %>
					<option value="<%= company_list[i]._id %>" <%= company_list[i].selected ? "selected" : "" %>><%= company_list[i].company_name %></option>
				<% } %>
			</select>
		</div>
    <div class="form-group">
			<label for="taskFormTask">Enter Task*</label>
			<input type="text" class="form-control" name="task" id="taskFormTask" value="<%= task.task %>">
		</div>
		<div class="form-group">
			<label for="taskFormDate">Due Date*</label>
			<input type="date" class="form-control" name="due_date" id="taskFormDate" value="<%= task_due_date %>">
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>

	<% if(errors){ %>
		<div class="error-list">
			<ul>
				<% for(let i=0; i <errors.length; i++){ %>
					<li>
						<%= errors[i].msg %>
					</li>
					<% } %>
			</ul>
		</div>
	<% } %>

<%- include("footer") %>